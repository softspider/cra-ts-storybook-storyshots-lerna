{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "lib",
    "lib-esm",
    "node_modules",
    "**/*.spec*",
    "**/*.story*"
  ],
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "lib",
    "rootDirs": ["src"],
    "target": "es5"
  }
}
